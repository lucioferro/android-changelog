<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base library theme. -->
    <style name="LibChangelog" parent="Theme.MaterialComponents.DayNight">
<!--        <item name="changelogWindowStyle">@style/LibChangelog.Window</item>-->
        <item name="changelogTitleStyle">@style/LibChangelog.DialogTitle</item>
        <item name="changelogHeaderTitleStyle">@style/LibChangelog.HeaderTitle</item>
        <item name="changelogHeaderDateStyle">@style/LibChangelog.HeaderDate</item>
        <item name="changelogHeaderSummaryStyle">@style/LibChangelog.HeaderSummary</item>
        <item name="changelogBulletStyle">@style/LibChangelog.CellBullet</item>
        <item name="changelogBulletIconDefault">@drawable/ic_bullet</item>
        <item name="changelogBulletIconAdd">@drawable/ic_add</item>
        <item name="changelogBulletIconBug">@drawable/ic_bug</item>
        <item name="changelogBulletIconNotice">@drawable/ic_notice</item>
        <item name="changelogBulletIconRemove">@drawable/ic_remove</item>
        <item name="changelogTextStyle">@style/LibChangelog.CellText</item>
    </style>

    <style name="LibChangelog.DialogTitle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LibChangelog.Window" parent="LibChangelog">
    </style>

    <style name="LibChangelog.HeaderTitle" parent="LibChangelog">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="LibChangelog.HeaderDate" parent="LibChangelog">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="LibChangelog.HeaderSummary" parent="LibChangelog">
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="LibChangelog.CellBullet" parent="LibChangelog">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:background">?attr/changelogBulletIconDefault</item>
        <item name="android:backgroundTint">?android:colorAccent</item>
    </style>

    <style name="LibChangelog.CellText" parent="LibChangelog">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <!-- DIALOG Theme -->

    <style name="ChangeLogAlertDialogTheme" parent="LibChangelog">
<!--        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
        <item name="buttonBarPositiveButtonStyle">@style/ChangeLogPositiveButtonStyle</item>

    </style>

<!--    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">-->
<!--        <item name="android:textColor">#f00</item>-->
<!--    </style>-->

    <style name="ChangeLogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?android:colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>